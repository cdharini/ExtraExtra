<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.projects.cdharini.extraextra.fragments.FilterDialogFragment">
    <TextView
        android:id="@+id/tvBeginDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"
        android:text="@string/beginDate" />

    <TextView
        android:id="@+id/tvBeginDateSelected"
        android:layout_below="@id/tvBeginDate"
        android:layout_width="wrap_content"
        tools:text="2017-08-21"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvSortOrder"
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvBeginDateSelected"
        android:layout_marginTop="20dp"
        android:text="@string/sortOrder" />

    <Spinner
        android:id="@+id/spSortOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvSortOrder" />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spSortOrder"
        android:layout_marginTop="20dp"
        android:text="@string/newsDeskValues" />

    <CheckBox
        android:id="@+id/cbNewsdesk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvCategory"
        android:layout_below="@+id/tvCategory"
        android:text="@string/newsdesk1" />

    <CheckBox
        android:id="@+id/cbNewsdesk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvCategory"
        android:layout_below="@+id/cbNewsdesk1"
        android:text="@string/newsdesk2" />

    <CheckBox
        android:id="@+id/cbNewsdesk3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvCategory"
        android:layout_below="@+id/cbNewsdesk2"
        android:text="@string/newsdesk3" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbNewsdesk3"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorIcons"
        android:text="@string/save" />

</RelativeLayout>
